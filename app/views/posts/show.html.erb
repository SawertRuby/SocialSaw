
<h3><%= link_to @post.profile.username, profile_path(@post.profile) %></h3>
<h1><%= @post.description %></h1>

<% @post.images.each do |image| %>
  <div>
    <%= image_tag image %>
  </div>
<% end %>

<% @comments.each do |comment| %>
  <div>
    <% if comment.profile.present? %>
      <%= link_to comment.profile.username, profile_path(comment.profile) %>
    <% else %>
      <p>Аноним</p> 
    <% end %>
  </div>
   <p><%= comment.title %></p> 
  <% comment.images.each do |image| %>
    <div>
      <%= image_tag image %>
    </div>
  <% end %>
<% end %>



<%= form_with(model: [@post, @comment], local: true) do |form| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% @comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_area :title %>
  </div>

  <div class="field">
    <%= form.label :images %>
    <%= form.file_field :images, multiple: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>